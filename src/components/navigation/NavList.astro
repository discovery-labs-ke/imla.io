---
import type { Props as Link } from './NavLink.astro'
import NavLink from './NavLink.astro'

type Props = {
  data: Link[]
}

const currentPage = Astro.url.pathname
const { data } = Astro.props
---

{
  data.map(link => (
    <NavLink
      img={link.img}
      href={link.href}
      title={link.title}
      isActive={currentPage === link.href}
    />
  ))
}
