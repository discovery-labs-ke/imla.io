---
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card"
import {
  Table,
  TableBody,
  TableCell,
  TableHead,
  TableHeader,
  TableRow,
} from "@/components/ui/table"

import { pricingBenefits, pricingBundles } from "@/data/siteData"
import { Icon } from "astro-icon/components"
import Heading from "@/components/Heading.astro"
import SectionWrapper from "@/layouts/SectionWrapper.astro"
---

<SectionWrapper>
  <section
    aria-label="Pricing table"
    class="space-y-14 lg:space-y-32 flex flex-col items-center text-center"
  >
    <Heading tagName="h1" classes="">Your Time, Your Budget</Heading>

    <Card className="w-full lg:max-w-5xl pb-4">
      <CardHeader>
        <CardTitle className="tracking-wide"
          >Transcription minutes made simple</CardTitle
        >
        <CardDescription>Starting at KES 5/minute</CardDescription>
      </CardHeader>
      <CardContent className="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <Table className="lg:text-base">
          <TableHeader>
            <TableRow className="">
              <TableHead className="text-center w-1/2">Bundle</TableHead>
              <TableHead className="text-center">Price</TableHead>
            </TableRow>
          </TableHeader>
          <TableBody>
            <TableRow className="">
              <TableCell className="font-medium">Basic</TableCell>
              <TableCell>KES. 5/minute</TableCell>
            </TableRow>
            {
              pricingBundles.map((item) => (
                <TableRow>
                  <TableCell className="font-medium">{item.bundle}</TableCell>
                  <TableCell>KES. {item.price}</TableCell>
                </TableRow>
              ))
            }
          </TableBody>
        </Table>

        <div class="lg:border-l-2 lg:pl-6 space-y-2">
          <p class="text-muted-foreground lg:text-lg">
            All bundles are inclusive of:
          </p>
          <ul class="space-y-1">
            {
              pricingBenefits.map((benefit) => (
                <li class="flex gap-2 text-start sm:text-sm lg:text-base ">
                  <Icon name="check" class="text-primary size-6 " />
                  <p class="w-11/12">{benefit}</p>
                </li>
              ))
            }
          </ul>
        </div>
      </CardContent>
    </Card>
  </section>
</SectionWrapper>
