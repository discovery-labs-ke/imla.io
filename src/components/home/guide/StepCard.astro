---
import type { CollectionEntry } from 'astro:content'
import {
  Card,
  CardDescription,
  CardHeader,
  CardTitle,
} from '@/components/ui/card'
import { Image } from 'astro:assets'

type Props = {
  data: CollectionEntry<'steps'>['data']
}

const { data } = Astro.props

const { title, description, thumbnail } = data
---

<Card
  className="overflow-hidden max-w-md border-2 transition-transform hover:scale-105 h-80"
>
  <Image
    src={thumbnail}
    alt={title}
    width={500}
    format="avif"
    class="h-2/3"
    quality="mid"
  />
  <CardHeader className="py-3">
    <CardTitle className="text-balance text-center">{title}</CardTitle>
    <CardDescription className="leading-relaxed text-center">
      {description}
    </CardDescription>
  </CardHeader>
</Card>
