---
// astro tools
import { getCollection } from "astro:content"

// layouts
import SectionWrapper from "@/layouts/SectionWrapper.astro"

// components
import Heading from "../Heading.astro"
import FaqList from "./FaqList"

const faqs = await getCollection("faqs", (item) => item.data.isGeneral)
---

<SectionWrapper>
  <section aria-label="FAQ section" class="space-y-12">
    <Heading tagName="h1" classes="text-center"
      >Let's answer some questions</Heading
    >
    <div>
      <FaqList data={faqs.map((item) => item.data)} client:visible />
    </div>
  </section>
</SectionWrapper>
