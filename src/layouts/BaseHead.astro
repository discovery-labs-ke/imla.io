---
import { ViewTransitions } from "astro:transitions"
import ThemeHeadScript from "@/components/theme-head-script.astro"
import { SEO } from "astro-seo"
import { baseData } from "@/data/siteData"
import Posthog from "@/components/monitoring/posthog.astro"

type Props = {
  title?: string
  description?: string
}

const { title = baseData.title, description = baseData.description } =
  Astro.props
---

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/imla.svg" />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <meta name="description" content={description} />
  <SEO
    title={title}
    description={description}
    openGraph={{
      basic: {
        title: title,
        type: "website",
        image: baseData.image.src,
      },
    }}
    twitter={{
      creator: "@snkiiyuru",
    }}
  />
  <ThemeHeadScript />
  <ViewTransitions />
  <Posthog />
</head>
