---
import ThemeHeadScript from '@/components/theme-head-script.astro'
import { baseData } from '@/data/siteData'
import { SEO } from 'astro-seo'
import { ViewTransitions } from 'astro:transitions'


type Props = {
  title?: string
  description?: string
}

const { title = baseData.title, description = baseData.description }
  = Astro.props
---

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/imla.svg" />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <meta name="description" content={description} />
  <SEO
    title={title}
    description={description}
    openGraph={{
      basic: {
        title,
        type: 'website',
        image: baseData.image.src,
      },
    }}
    twitter={{
      creator: '@snkiiyuru',
    }}
  />
  <ThemeHeadScript />
  <ViewTransitions />
</head>
